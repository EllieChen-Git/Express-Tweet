<h1>Log In</h1>

{{!-- Error message for invalid log in --}}
{{#if error }}
    <p>Error: {{error}}</p>
{{/if}}

{{!-- Log in form --}}
<form method="POST" action="/login">
    <div>
        <label>Email</label>
        <input type="text" name="email" />
    </div>
     <div>
        <label>Password</label>
        <input type="password" name="password" />
    </div>
    <div>
        <input type="submit" value="Log In">
    </div>
</form>
